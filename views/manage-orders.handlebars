<main class="content" id="manage-orders">
	<div class="column-container">
		<div class="side-left" id="sortbooks-sidebar">
			<h5 class="sort-header">Sort by...</h5>
			<div id="sort-fields-catalog">
			<!-- fix later
				<input name="sort-title" type="text" id="sort-title" placeholder="Title of book">
				<input name="sort-member" type="text" id="sort-member" placeholder="Member name">
				<input name="sort-date-out" type="text" id="sort-date-out" placeholder="Date checked-out">
				<input name="sort-date-in" type="text" id="sort-date-in" placeholder="Date returned">
				<input name="sort-bookid" type="text" id="sort-bookid" placeholder="Book ID">
			-->

				<select class="sort-field" name="sort-field-1" id="sort-field-order-1">
					<option value="none">None</option>
					<option value="book.title">Title of Book</option>
					<option value="checkout.date">Date Checked-Out</option>
					<option value="returned">Date Returned</option>
					<option value="book.bookID">Book ID</option>
				</select>
				<br>
			</div>
			<button class="btn update-btn" type="button" id="submit-sort-orders">Update</button>
		</div>

		<div class="center-section" id="search-main">
			<div id="search-bar">
				<input name="search-prompt" type="text" id="search-prompt" placeholder="Search...">
				<button type="button" id="search-members-button"><i class="fas fa-chevron-right"></i></button>
			</div>

			<div id="members">
				{{#each members}}
					<div id="{{memberID}}">
						<div class="order-title">{{member}} ({{memberID}})</div>
						{{#each checkouts}}
							<div class="order-detail-container">
								<div>{{title}} ({{bookID}})</div>
								<div>Checkout Date: {{date}}</div>
								<div>Returned: {{returned}}</div>
							</div>
						{{/each}}
					</div>
				{{/each}}
			</div>
		</div>

		<div class="side-right" id="open-checkouts-sidebar">
			<h5>Open Checkouts</h5>
			<div id="open-checkouts">
			</div>
			{{#each openCheckouts}}
				<div data="{{id}}">
					<div class="order-title">{{member}}</div>
					<div class="order-detail-container">
						<div>{{title}} ({{id}})</div>
						<div>Checkout Date: {{date}}</div>
						<div>Returned: {{returned}}</div>
						<button type="button" class="returned-submit"><i class="fas fa-check-square"></i></button>
					</div>
				</div>
			{{/each}}
		</div>
	</div>

</main>